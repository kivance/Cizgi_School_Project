@model List<Cizgi_School_Project.Models.StudentsTable>
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<h1>Mvc Students DENEME</h1>

<div class="container">
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Görsel</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Sil</th>
        </tr>
        @*<img src="@item.Image" style="width: 50px; border-radius: 50%;" />*@

        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center">@item.StudentID</td>
                <td><div style="width:50px; height: 50px; overflow: hidden; display: flex; justify-content: center; border-radius: 50%;"><img src="@item.Image" style="height: 100%; justify-self: center;"/></div></td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td><a href="/Students/DeleteStudent/@item.StudentID" class="btn btn-danger">Sil<a/></td>
            </tr>
        }

    </table>
    <a href="/Students/AddStudent" class="btn btn-primary">Yeni Öğrenci Ekle</a>
</div>